%p#notice= notice
%h1 Pages
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @pages.each do |page|
      %tr
        %td= link_to "#{page.title}", admin_page_path(page)
        %td= link_to 'Edit', edit_admin_page_path(page)
        %td= link_to 'Destroy', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Page', new_admin_page_path

%p
  = params.inspect
