<!DOCTYPE html>
<html>
  <head>
    <title>SflxRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="user_nav">
      <% if @current_user %>
      Logged in as <%= @current_user.email %>
      <%= link_to "Log out", logout_path %>
      <% else %>
      <%= link_to "Sign up", zhuce_path %> or
      <%= link_to "log in", guanli_path %>
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash flash_#{name}" %>
    <% end %>
    <%= yield %>
  </body>
</html>
