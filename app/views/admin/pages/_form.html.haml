= form_for([:admin, page], :url => (admin_page_path(@page) if @page.persisted?) ) do |f|
  - if page.errors.any?
    #error_explanation
      %h2
        = pluralize(page.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - page.errors.full_messages.each do |message|
          %li= message

  = f.label :Title
  = f.text_field :title
  %br
  = f.label :Body
  = f.text_field :body
  %br
  .actions
    = f.submit
